{% import "renobase.html.twig" as m %}
<table class="ui striped very compact table">
    <thead>
        <tr>
            <th>#</th>
            <th>Nodes</th>
            <th class="ui collapsing">Run As</th>
            <th>Commands</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        {% for row in data %}
            <tr>
                <td class="top aligned collapsing">
                    <a name="{{row.runitem.id}}" class="anchor">&nbsp;</a>{{loop.index}}
                </td>
                <td class="ui collapsing top aligned">
                    {{ m.prettyDisplay(row.params.Nodes) }}
                </td>
                <td class="ui collapsing top aligned">
                    {{ m.prettyDisplay(row.params['Run as']) }}
                </td>
                <td class="top aligned">
                    <div class="ui form">
                        <textarea readonly="readonly" style="font-family: monospace">{{row.params.Commands}}</textarea>
                    </div>
                </td>
                <td class="ui collapsing top aligned">
                    {{ m.runItemStatusControl(row.runitem) }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

